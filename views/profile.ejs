                <ul class="sidebar-nav-rt">
                    <li class="sidebar-nav-rt">USER</li>
                    <li class="sidebar-nav-rt"><%=name%></li>
                    <li class="sidebar-nav-rt">User NAME </li>
                    <li class="sidebar-nav-rt">User Penname AGE</li>
                    <li class="sidebar-nav-rt">User AGE</li>
                    <li class="sidebar-nav-rt btn pub-btn"><a href="/users/editProfile"> EDIT Profile</a> </li> -->
                    <!-- <li class="sidebar-nav-rt btn pub-btn"><a href="/users/login"> Sign In</a> </li> -->
                 <!-- </ul>  -->

            <!-- </div> --> 

        </div>
    </div>

    <!-- Menu Toggle JS-->
    <script src="/js/sidebar.js"></script>
